# Etapa de build
FROM node:18-slim AS builder

WORKDIR /app

# Instala apenas dependências de produção no início para melhor cache
COPY package*.json ./
RUN npm ci

COPY . ./
RUN npm run build

# Etapa final
FROM node:18-slim

WORKDIR /app

# Instala apenas os componentes necessários do LibreOffice
RUN apt-get update && apt-get install -y \
    libreoffice-core \
    libreoffice-writer \
    fonts-dejavu \
    dumb-init \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

# Verifica se LibreOffice está funcional
RUN libreoffice --headless --version >/dev/null 2>&1

# Copia apenas o necessário do build
COPY --from=builder /app/package*.json ./
RUN npm ci --omit=dev

COPY --from=builder /app/dist ./dist
COPY --from=builder /app/file ./file
COPY --from=builder /app/ssl ./ssl

# Muda permissões e usa usuário não-root
RUN chown -R node:node /app
USER node

# Expõe a porta da aplicação NestJS
EXPOSE 8080

# Copia o .env no final, se realmente necessário
COPY --chown=node:node .env .env

# Inicia a aplicação com dumb-init
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "dist/main.js"]
